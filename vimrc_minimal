set nocompatible
filetype on
filetype plugin indent on
filetype plugin on
syntax on
syntax enable
set number
set pastetoggle=<F3>
nnoremap ; :
nnoremap : ;
imap jk <esc>
imap kj <esc>
map vv 0
map nn <S-$>
map f y
set tabstop=4
set shiftwidth=4
set expandtab
" scrolling should be only 5 lines (c-d and ctrl-u)
set scroll=5
noremap <C-u> 5<C-u>
noremap <C-d> 5<C-d>
map <C-h> <C-w>h
map <C-j> <C-w>j
map <C-k> <C-w>k
map <C-l> <C-w>l
